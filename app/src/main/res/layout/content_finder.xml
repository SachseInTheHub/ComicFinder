<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.FinderActivity"
    tools:showIn="@layout/activity_finder">

    <TextView
        android:id="@+id/search_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Search for your comic character"
        android:textSize="20sp"/>

    <EditText
        android:layout_below="@id/search_text_tv"
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:imeOptions="actionSend"
        android:inputType="text"
        />

    <LinearLayout
        android:id="@+id/comic_profile_wrapper"
        android:layout_below="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/profile_story_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:text= "profile description"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/comic_profile_wrapper"
        android:id="@+id/comics_rv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
